#
# Generated by Salt Stack
#
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A INPUT -i lo -j ACCEPT
-A INPUT -d 127.0.0.0/8 ! -i lo -j REJECT --reject-with icmp-port-unreachable
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p tcp -m tcp --dport 22 -j ACCEPT
# allow using mosh server/client
-A INPUT -p udp --dport 60000:61000 -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type 8 -j ACCEPT
# Salt Defined Rules
{% if 'firewall_rules' in pillar -%}
{% for rule in pillar['firewall_rules'] -%}
{{ rule }}
{% endfor -%}
{% endif -%}
# End of Salt Defined Rules
-A INPUT -j REJECT --reject-with icmp-port-unreachable
-A FORWARD -j ACCEPT -s 10.0.3.0/24
-A FORWARD -j ACCEPT -d 10.0.3.0/24
-A FORWARD -j ACCEPT -s 172.17.0.0/16
-A FORWARD -j ACCEPT -d 172.17.0.0/16
-A FORWARD -j REJECT --reject-with icmp-port-unreachable
-A OUTPUT -j ACCEPT
COMMIT
# NAT rules
*nat
:DOCKER - [0:0]
-A PREROUTING -m addrtype --dst-type LOCAL -j DOCKER
-A OUTPUT ! -d 127.0.0.0/8 -m addrtype --dst-type LOCAL -j DOCKER
-A POSTROUTING -s 10.0.3.0/24 ! -d 10.0.3.0/24 -j MASQUERADE
-A POSTROUTING -s 172.17.0.0/16 ! -d 172.17.0.0/16 -j MASQUERADE
COMMIT
